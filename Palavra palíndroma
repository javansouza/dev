#include <iostream>

using namespace std;

int main(){

string nome;
int cont,cont2, nome2;


cout<<"Digite seu nome"<<endl;
getline(cin,nome);

nome2 = 0;
cont2 = 0;
//imprime a palavra na ordem inversa e compara os caractres
for(cont = nome.size()-1; cont >= 0 ; cont--){
if ((cont>=0) && (nome[cont] != nome[cont2])){
nome2++;}
cont2++;
cout<<nome[cont];
}
cout<<endl;
if (nome2>0){
	cout<<"Palavra nao eh palindroma";
}
else{
cout<<"A palavra eh palindroma";

}
}
